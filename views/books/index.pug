extends ../layout

block content
  h1= title
  p
    a.button(href="/books/new") Create New Book

  p 
    form(action=`/books/search`, method="get")
      input(type="search", name="search", placeholder="Search Books" )
      input(type="submit" value="Search")

  table 
    thead 
      tr 
        th Title 
        th Author
        th Genre 
        th Year 
    tbody
    - let data;
    if books
      - data = books
    else
      - data = searchResults
    each book in data
      book
        tr 
          td 
            a(href="/books/" + book.id)= book.title
          td
            = book.author 
          td 
            = book.genre 
          td
            = book.year 
